<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>What cocktail would you want to check?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr> </tr>
      <tr>
        <td><%= cocktail.name.capitalize %></td>
        <td><%= link_to '  Show', cocktail %></td>
        <td><%= link_to '  Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to '  Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add a new Cocktail', new_cocktail_path %>
