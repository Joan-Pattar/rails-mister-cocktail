


<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://res.cloudinary.com/joan-pattar/image/upload/v1502448426/pexels-photo-110472_ouvwu1.jpg');">
  <div class="banner-content">
    <h1>Welcome and Chill in Moe's Bar</h1>
    <p> Drink or create the tastiest cocktails</p>
     <%=link_to "Become a genius barman",  new_cocktail_path, :class=>"btn btn-primary btn-lg"%>
  </div>
</div>


<h1>Which cocktail would you want to check?</h1>

<div class="container">
  <div class="row">
      <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-4">
      <% if cocktail.photo? %>
        <%= cl_image_tag cocktail.photo.path, width: 200, height: 300, crop: :fill %>
      <% end %>
     <p><%= cocktail.name.capitalize %></p>
        <div class="les_boutons">
        <p><div class="btn-medium btn-xs "> <%= link_to '  Show', cocktail %> </div>
        <div class="btn-medium btn-xs"> <%= link_to '  Edit', edit_cocktail_path(cocktail) %> </div>
        <div class="btn-medium btn-xs"> <%= link_to '  Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></div></p>
        </div>
    </div>
  <% end %>
  </div>
</div>


