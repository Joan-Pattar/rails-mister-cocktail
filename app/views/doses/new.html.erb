<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :ingredient %>
  </div>

  <div class="form-inputs">
    <%= f.input :description, label: "Quantity" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


